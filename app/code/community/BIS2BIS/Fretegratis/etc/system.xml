<?xml version="1.0" ?>
<config>

	<tabs>
        <gerfrete translate="label" module="fretegratis">
            <label>Gerenciar Frete Gratis</label>
            <sort_order>100</sort_order>
        </gerfrete>
    </tabs>

   <sections>
   		<gerfrete translate="label" module="fretegratis">
            <label>Gerenciar</label>
            <tab>gerfrete</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <gerfrete_group translate="label" module="fretegratis">
                    <label>Frete Grátis</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <ativa_frete translate="label">
                            <label>Habilitado</label>
                            <comment>Habilitado ou desabilita o frete grátis</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </ativa_frete>
                        <title_frete translate="label">
                            <label>Título</label>
                            <comment>Título do método, será mostrado quando cotar o frete no carrinho/checkout</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_frete>
                        <valor_frete translate="label">
                            <label>Valor Mínimo</label>
                            <comment>Valor mínimo para aplicar a regra, valor total do carrinho (Exceto valor de frete ou taxas extras)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </valor_frete>
                    </fields>
                </gerfrete_group>
            </groups>
        </gerfrete>

		<carriers>
			<groups>
				<fretegratis translate="label" module="shipping">
					<label>Frete Grátis</label>
					<frontend_type>text</frontend_type>
					<sort_order>13</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					   <fields>
							<active translate="label">
								<label>Enabled</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>1</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</active>
							<sort_order translate="label">
								<label>Ordem</label>
								<frontend_type>text</frontend_type>
								<sort_order>100</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</sort_order>
						</fields>
				</fretegratis>
			</groups>
		</carriers>
	</sections>
</config>