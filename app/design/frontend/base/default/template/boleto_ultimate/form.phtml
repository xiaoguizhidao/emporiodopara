<?php $standard = $this->getStandard() ?>
<?php $_code = $this->getMethodCode() ?>

<ul class="form-list" id="payment_form_<?php echo $_code ?>" style="display: none;">
	<li>
		<?php $bancos_ativos = $standard->getBancosAtivos(); ?>
		<?php if(count($bancos_ativos) == 1) : ?>
			<?php foreach ($bancos_ativos as $key => $value) : ?>
				<label class="label" for="code_banco"><?php echo $value ?></label>
				<input id="code_banco" class="input-text" name="payment[code_banco]" type="hidden" value="<?php echo $key ?>"/>
			<?php endforeach ?>
		<?php else: ?>
			<label class="label" for="code_banco">Escolha o Banco:</label>
			<select id="code_banco" class="select" name="payment[code_banco]" type="select">
				<option value="">Selecione...</option>
				<?php foreach ($bancos_ativos as $key => $value) : ?>
					<option value="<?php echo $key ?>"><?php echo $value ?></option>
				<?php endforeach ?>
			</select>
		<?php endif ?>
	</li>
	<li>
		<?php echo $standard->getConfig('mensagem_form') ?>
	</li>
</ul>